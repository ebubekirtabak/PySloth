{
    "description": {
        "en": "Conf.json is default configuration file. Please do not changed that conf file. Create new \"myconf.json\" file in project root and copy this json your \"myconf.json\" file ."
    },
    "user_agent": "Mozilla/5.0 (X11; Ubuntu; Linux x86_64; rv:62.0) Gecko/20100101 Firefox/62.0",
    "filters":[],
    "isTest": false,
    "scope": [
        {
            "settings":{
                "search_time_sleep": 5,
                "download_time_sleep": 5,
                "session_id": "alamy_dollar",
                "multi_process": {
                    "time_out": 300,
                    "limit": 3,
                    "base": "mongo"
                },
                "driver": {
                    "driver_path": "/usr/lib/chromium-browser/chromedriver",
                    "driver_arguments": [
                        "--no-sandbox",
                        "--headless"
                    ]
                },
                "database": {
                    "type": "MongoDB",
                    "name": "BotDatabase",
                    "uri": "mongodb://localhost:27017/",
                    "user_name": "admin",
                    "password": "database_password",
                    "collections": {
                        "history_collection": { "name": "history_collection" },
                        "log_collection": { "name": "log_collection" },
                        "main": { "name": "main_collection" }
                    }
                },
                "history": {
                    "collection_name": "history_collection",
                    "source": "mysql, mongo",
                    "clear_on_exit": true
                }
            },
            "scopeName":"sahibinden.com auto",
            "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/67.0.3396.87 Safari/537.36 OPR/54.0.2952.64",
            "startUrl": "https://www.sahibinden.com/otomobil?pagingSize=50",
            "isPagination": true,
            "isLogger": true,
            "pagination": {
              "urlClass": "prevNextBut",
              "ifExistsClass": "last",
              "attrib": "href"
            },
            "searchUrlClass": {
                "className": "classifiedTitle",
                "type": "loop",
                "forItem": [{
                    "childNameType": "loop",
                    "folderChildNameClass": "//li[@class='breadcrumbItem']/a",
                    "childIterator": "os.sep",
                    "downloadFolder": "auto_images",
                    "itemList": [{
                        "className": "//div[@class='classifiedDetailMainPhoto']/label/img",
                        "classNames": [
                            "//div[@class='classifiedDetailMainPhoto']/label/img",
                            "//div[@class='classifiedDetailMainPhoto']/label/span"
                        ],
                        "process": "download",
                        "needAttr": {
                            "if": "data-src",
                            "else": "src"
                        }
                    }]
                }]
            }
        }
    ]
}
